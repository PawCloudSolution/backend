{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,

    "rootDir": "src",
    "outDir": "dist",

    "resolveJsonModule": true,
    "skipLibCheck": true
  },
  "include": ["src"]
}
